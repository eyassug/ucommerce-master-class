<!--
	Custom configuration for uCommerce components.
	
	Find the ID of component you want to override
	and use the same ID here. Your component will
	override the default.
	
	You can configure new components here as well
	and have them injected into existing ones.
-->
<configuration>
  <components>
    <partial-component id="Basket">
      <parameters>
        <tasks>
          <array>
            <value insert="last">${Basket.NotifyOnVipBasket}</value>
          </array>
        </tasks>
      </parameters>
    </partial-component>

    <component id="Basket.NotifyOnVipBasket"
               service="UCommerce.Pipelines.IPipelineTask`1[[UCommerce.EntitiesV2.PurchaseOrder, UCommerce]], UCommerce"
               type="MyUCommerceApp.BusinessLogic.Pipelines.NotifyOnVipBasketTask, MyUCommerceApp.BusinessLogic">
      <parameters>
        <VipThreshold>500</VipThreshold>
      </parameters>
    </component>

  </components>
</configuration>